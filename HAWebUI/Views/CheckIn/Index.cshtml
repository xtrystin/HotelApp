@model HAWebUI.Models.CheckInDisplayModel

@{
    ViewData["Title"] = "Index";
}

<h1>Check In</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3>Fill in customer's data</h3>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <h3>Fill in room data</h3>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <input asp-for="RoomId" class="form-control" />
                <a class="btn btn-sm btn-info" href="/room" target="_blank">Rooms (Display all rooms)</a>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdultsAmount" class="control-label"></label>
                <input asp-for="AdultsAmount" class="form-control" />
                <span asp-validation-for="AdultsAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentsAmount" class="control-label"></label>
                <input asp-for="StudentsAmount" class="form-control" />
                <span asp-validation-for="StudentsAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaysAmount" class="control-label"></label>
                <input asp-for="DaysAmount" class="form-control" />
                <span asp-validation-for="DaysAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
